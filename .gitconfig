[alias]
  co = checkout
  st = status
  ci = commit

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = /usr/bin/vi 
  excludesfile = ~/.gitignore_global
  pager = less -r
  
[user]
  name = Daniel Bogan
  email = d@waferbaby.com
[push]
  default = matching
